<mvc:View xmlns:core="sap.ui.core" 
		  xmlns:mvc="sap.ui.core.mvc" 
		  xmlns="sap.m" xmlns:l="sap.ui.layout" 
		  xmlns:f="sap.ui.layout.form"
		  xmlns:html="http://www.w3.org/1999/xhtml" 
		  controllerName="ui5.overview.routing2.controllers.Detail">
		  
	<Page id="page" 
		  title="{i18n>DETAIL_TITLE}" 
		  showNavButton="{Info>/fullScreen}" 
		  navButtonPress="onNavButton" class="MasterButton">
		<headerContent>
			<Button icon="sap-icon://full-screen" 
			        tooltip="{i18n>fullscreentip}"
			        press="_goToFullScreen" 
			        visible="{= ${Info>/fullScreen} === true ? false : true  }" />
		</headerContent>
		<content>
			<ObjectHeader responsive="false" 
						  title="{ProductSet>/Name}" 
						  numberUnit="EUR"
				          number="{ path: 'Price', 
				          			type: 'sap.ui.model.type.Float', 
				          			formatOptions: { groupingEnabled: true, 
				          							 decimals: 2, 
				          							 groupingSeparator : '.', 
				          							 decimalSeparator : ',' } 
				          			}">
				<attributes>
					<ObjectAttribute title="{i18n>ProductId}" text="{ProductId}"/>
					<ObjectAttribute title="{i18n>Supplier}" text="{SupplierName}"/>
					<ObjectAttribute title="{i18n>Dimension}" text="{Width} x {Depth} x {Height} {DimUnit}"/>
				</attributes>
				
				<statuses>
					<ObjectStatus text="{i18n>Weight} : {WeightMeasure} {WeightUnit}"
						          state="{ parts: [ {path: 'WeightMeasure'}, {path: 'WeightUnit'} ], formatter: '.weightState' }"/>
					<ObjectStatus text="{i18n>Stock} : {Quantity}" state="{ path : 'Quantity', formatter : '.stockStatus' }"/>
				</statuses>
  			</ObjectHeader>
			<VBox alignItems="Center">
				<items>
					<Image id="productImage" 
						   src="{ProductPicUrl}" 
						   decorative="true" 
						   class="sapUiSmallMargin" 
						   width="100%"/>
					<ObjectAttribute text="{Description}"/>
				</items>
			</VBox>
		</content>
	</Page>
</mvc:View>