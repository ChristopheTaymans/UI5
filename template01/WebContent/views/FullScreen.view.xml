<mvc:View xmlns:core="sap.ui.core" 
		xmlns:mvc="sap.ui.core.mvc" 
		xmlns="sap.m"
		xmlns:l="sap.ui.layout"
		xmlns:f="sap.ui.layout.form"	
		controllerName="template01.Application.controllers.FullScreen" 
		xmlns:html="http://www.w3.org/1999/xhtml"
		displayBlock="true"
		height="100%">
	<Page 	title="{i18n>FULL_SCREEN_TITLE}" titleLevel="H2"
			showNavButton="true"
			navButtonPress="_onNavButton">
		<content>
			<VBox class="sapUiSmallMargin">
						    <f:SimpleForm 	minWidth="1024"
											maxContainerCols="2"
											editable="false"
											layout="ResponsiveGridLayout"									
											labelSpanL="3"
											labelSpanM="3"
											emptySpanL="4"
											emptySpanM="4"
											columnsL="1"
				                            columnsM="1" >
						        <f:content >
						            <Label text="{i18n>PURCHASEORDERID}"/>
						            <Text text="{Ebeln}"/>		
						            <Label text="{i18n>DOCDATE}"/>
						            <Text text="{
					        					path : 'Aedat',
					        					type: 'sap.ui.model.type.Date',
					        					formatOptions: { pattern: 'dd/MM/yyyy'}
				        					}"/>		
						            <Label text="{i18n>DOCTYPE}"/>
						            <Text text="{Batxt} ({Bsart})"/>	
						            <Label text="{i18n>PAYMENTTERM}"/>
						            <Text text="{Ztext} ({Zterm})"/>		
						            <Label text="{i18n>PURCHORG}"/>
						            <Text text="{Ekotx} ({Ekorg})"/>	
						            <Label text="{i18n>PURCHGRP}"/>
						            <Text text="{Eknam} ({Ekgrp})"/>	
						            <Label text="{i18n>COMPANY}"/>
						            <Text text="{Butxt} ({Bukrs})"/>
						        </f:content>
						    </f:SimpleForm>
					    </VBox>
		</content>
	</Page>
</mvc:View>