<mvc:View 
		xmlns:mvc="sap.ui.core.mvc" 
		xmlns="sap.m"
		controllerName="SAPPOApproval.Application.controllers.Master" 
		xmlns:html="http://www.w3.org/1999/xhtml"
		displayBlock="true"
		height="100%"
		>
		
<Page title="{i18n>MASTER_TITLE} ({Info>/actualCount}/{Info>/totalCount})"
      id="page"
	  showHeader="true">	
           <subHeader>           
			<Toolbar id="searchBar">	
				<SearchField
					    id="searchPoNumber"
						liveChange="onPoNumberSearch"
						width="100%"
						showRefreshButton="true"
						showSearchButton="false"						
						search="handleRefresh"
						placeholder="{i18n>SEARCHSUPPLIER}"
						 />
						<ToolbarSpacer />	
					<Button id="refresh"  				
							press="handleRefresh" 
							icon="sap-icon://refresh"/> 
				</Toolbar>	
			</subHeader>			
			<content>	  				
				<List	id="lstPO"
						items="{
							path: 'main>/HeaderSet',
							sorter: [
								{
									path: 'Ebeln',
									descending: false						
								}
							]
						}" 
						busyIndicatorDelay="10"
						mode="SingleSelectMaster"
						growing="true"
						growingThreshold="20"
						growingScrollToLoad="true"
						itemPress="_onItemPress"
						updateFinished="_onListUpdateFinished"
						>						
					<items>
						<ObjectListItem	
							 intro = "{main>Ebeln}"							 				
							 number="{
								path: 'main>Netwr',
								type: 'sap.ui.model.type.Float',  
		   						formatOptions: {  
		   							groupingEnabled: true,
		   							decimals: 2,
		   							groupingSeparator : '.',
		   							decimalSeparator : ','
		   						}
						     }"		
							 numberUnit="{main>Waers}"
							 type="{= ${DEVICE>/system/phone} === true ? 'Navigation' : 'Active' }">	      
							 <attributes>						           
					 			<ObjectAttribute text="{
			        						path : 'main>Aedat',
			        						type: 'sap.ui.model.type.Date',
			        						formatOptions:{pattern: 'dd/MM/yyyy'}
			        					}"/>					   	 
							  	 </attributes>	
						</ObjectListItem>						
					</items>					
				</List>
			</content>
					<footer>
			<Toolbar>
		    	<Button text='Create' icon="sap-icon://create"  press="onCreate" />
				<Button text='Save' icon="sap-icon://save" type="Emphasized" visible="{Info>/toSave}" press="onSave" />
			</Toolbar>
		</footer>
		</Page>
</mvc:View>